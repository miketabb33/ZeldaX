<div class="card-header" id="turn-board">
  <div id="turn-board-controls">
    <h2 id="whos-turn"></h2>
    <i class="fas fa-angle-left" id="player1-turn-arrow"></i>
    <i class="fas fa-angle-right" id="player2-turn-arrow"></i>
    <h5><span id="actions-left-in-turn"></span></h5>
    <button type="button" id="end-turn-button" class="btn btn-warning">End Turn</button>
    <span id="end-turn-timer"class="text-white"></span>
  </div>
  <div id="winner-display-turn-board"></div>
  <h3 id="fight-again">**Refresh Page For Rematch**</h3><!-- Temporary-->
</div>
<div class="card-body">
  <div id="action-header">
    <%= image_tag('action-art-left.png', id: "action-art-left",alt: "artL") %> 
    <span id="action-header-title">Actions</span>
    <%= image_tag('action-art-right.png', id: "action-art-right",alt: "artR") %>
  </div>
  <div id="player1-moves"></div>
  <div id="player2-moves"></div>
  <br><br>
  <div id="combat-message-container">
    <div id="combat-message-header">Combat Messages</div>
    <div id="combat-message"></div>
  </div>
</div>