<div class="card player1-card">
  <div class="player1-avatar-photo"><%= image_tag('mage.jpg', class: "card-img-top", alt: "player1 Image") %></div> 
  <div class="card-img-overlay">
    <span class="player1-character-level character-level-design"></span>
    <span id="buff-hot-display-player1"></span>
    <span id="dot-display-player1"></span>
    <div id="action-display-player1"></div>
  </div>
  <div class="card-body">
    <div class="stat-info-popover text-info"><i class="fa fa-info-circle" aria-hidden="true" id="player1-stat-info-activator"></i></div>
    <div id="player1-stat-info-popover" class="player-stat-info-popover">
      <div id="player1-stat-popover-header" class="player-stat-popover-header"></div>
      <div id="player1-stat-popover-body"></div>            
    </div>
    <h4 class="card-title"><span class="player1-character-name"></span><span id="player1-death-indicator">(dead)</span></h4>
    <p class="card-text" id="fight-player1-type"><span class="player1-character-race"></span> <span class="player1-character-class"></span></p>
    Health:
    <div class="progress">
      <div class="progress-bar bg-success" id="player1-health-bar"></div>
    </div>
    <div id="player1-action-bar"></div>
  </div>
</div>

<div class="card">
  <%= render 'game/console' %>
</div>


